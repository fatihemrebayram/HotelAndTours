<script>
        $(function () {
            "use strict";
            $('.kenburns_slider').vegas({
                slides: [
                    { src: '/frontend/html/img/home_slider/slide1.jpg' },
                    { src: '/frontend/html/img/home_slider/slide2.jpg' },
                    { src: '/frontend/html/img/home_slider/slide1.jpg' }
                ],
                overlay: false,
                transition: 'fade2',
                animation: 'kenburnsUpRight',
                transitionDuration: 1000,
                delay: 25000,
                animationDuration: 30000
            });
        });
   
        $(function () {
            'use strict';
            $('input[name="dates"]').daterangepicker({
                autoUpdateInput: false,
                minDate: new Date(),
                locale: {
                    cancelLabel: 'Temizle',
                    applyLabel: 'Uygula', // Set the Turkish translation for the "Apply" button
                    format: 'DD-MM-YY',
                    daysOfWeek: ['Pz', 'Pt', 'Sa', 'Ça', 'Pe', 'Cu', 'Ct'],
                    monthNames: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran', 'Temmuz', 'Ağustos', 'Eylül', 'Ekim', 'Kasım', 'Aralık']
                }
            });

            $('input[name="dates"]').on('apply.daterangepicker', function (ev, picker) {
                $(this).val(picker.startDate.format('DD-MM-YY') + ' > ' + picker.endDate.format('DD-MM-YY'));
            });

            $('input[name="dates"]').on('cancel.daterangepicker', function (ev, picker) {
                $(this).val('');
            });
        });

        function qtySum() {
            var adultQty = parseInt($("input[name='qtyInputAdult']").val());
            var childQty = parseInt($("input[name='qtyInputChild']").val());
            var totalQty = adultQty + childQty;

            var cardQty = $(".qtyTotal");
            cardQty.text(totalQty);
        }

        qtySum();

        $(function () {
            $(".qtyButtons input").after('<div class="qtyInc"></div>');
            $(".qtyButtons input").before('<div class="qtyDec"></div>');

            $(".qtyDec, .qtyInc").on("click", function () {
                var $button = $(this);
                var $input = $button.parent().find("input");
                var oldValue = parseInt($input.val());

                if ($button.hasClass('qtyInc')) {
                    var newVal = oldValue + 1;
                } else {
                    // don't allow decrementing below zero
                    if (oldValue > 0) {
                        var newVal = oldValue - 1;
                    } else {
                        newVal = 0;
                    }
                }

                $input.val(newVal);
                qtySum();
                $(".qtyTotal").addClass("rotate-x");
            });

            function removeAnimation() {
                $(".qtyTotal").removeClass("rotate-x");
            }

            const counter = document.querySelector(".qtyTotal");
            counter.addEventListener("animationend", removeAnimation);
        });

        $(function () {
            // Submit form using AJAX
            $('#Add_Form').submit(function (e) {
                e.preventDefault(); // Prevent the default form submission

                var form = $(this);
                var url = form.attr('action');
                var formData = new FormData(this);

                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            // Show success message using SweetAlert
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı',
                                text: 'İşlem başarılı!',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(function () {
                                window.location.href = response.redirectUrl;
                            });
                        } else {
                            // Handle the failure scenario
                            response.errors.forEach(function (error) {
                                // Update the corresponding error message element
                                $('#' + error.propertyName).text(error.errorMessage);
                                console.log('Error:', error.propertyName + ' ' + error);

                                // Show the error message using Toastr
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Hata!',
                                    text: error.errorMessage
                                });
                            });

                            console.log('Form submission failed.');
                        }
                    },
                    error: function () {
                        // Handle the error scenario
                        console.log('An error occurred during form submission.');
                    }
                });
            });
        });

    </script>

